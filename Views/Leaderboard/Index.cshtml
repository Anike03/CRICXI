@using CRICXI.Models
@{
    ViewData["Title"] = "Leaderboard";
    var leaderboard = ViewBag.Leaderboard as List<LeaderboardEntry>;
}


<div class="container mt-5">
    <h2 class="mb-4 text-center text-warning">🏆 CRICXI Leaderboard</h2>

    <table class="table table-dark table-striped table-bordered text-center">
        <thead class="thead-light">
            <tr>
                <th>Rank</th>
                <th>Username</th>
                <th>Email</th>
                <th>Joined Contests</th>
            </tr>
        </thead>
        <tbody>
            @if (leaderboard != null && leaderboard.Any())
            {
                int rank = 1;
                foreach (var entry in leaderboard)
                {
                    <tr>
                        <td>@rank</td>
                        <td>@entry.Username</td>
                        <td>@entry.Email</td>
                        <td>@entry.JoinedContests</td>
                    </tr>
                    rank++;
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">No leaderboard data available</td>
                </tr>
            }
        </tbody>
    </table>
</div>
