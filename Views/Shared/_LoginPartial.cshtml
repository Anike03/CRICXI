@* No longer using ASP.NET Identity *@
@using Microsoft.AspNetCore.Http

<ul class="navbar-nav">
    @if (Context.Session.GetString("Username") != null)
    {
        <li class="nav-item">
            <span class="nav-link text-dark">Hello, @Context.Session.GetString("Username")!</span>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Auth" asp-action="Logout">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Auth" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Auth" asp-action="Login">Login</a>
        </li>
    }
</ul>
