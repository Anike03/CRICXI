@{
    ViewBag.Title = "User Login";
}

<h2>User Login</h2>

<form asp-action="Login" method="post">
    <div class="mb-3">
        <label>Username</label>
        <input type="text" name="username" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Password</label>
        <input type="password" name="password" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-2">@ViewBag.Error</div>
}

<hr />

<h4>Or Login with:</h4>

<div class="d-flex flex-column gap-2">
    <a class="btn btn-danger" href="/auth/externallogin?provider=Google">Login with Google</a>
    <a class="btn btn-primary" href="/auth/externallogin?provider=Facebook">Login with Facebook</a>
    <a class="btn btn-dark" href="/auth/externallogin?provider=Twitter">Login with X (Twitter)</a>
    <a class="btn btn-warning text-dark" href="/auth/externallogin?provider=Instagram">Login with Instagram</a>
</div>

<hr />

<div class="mt-3">
    <a class="btn btn-link" asp-action="Register">New User? Register Here</a> |
    <a class="btn btn-link text-danger" href="/Admin/Login">Login as Admin</a>
</div>
