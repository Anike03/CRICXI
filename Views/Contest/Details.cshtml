@model CRICXI.Models.Contest

@{
    ViewData["Title"] = "Contest Details";
    Layout = "_Layout";
}

<style>
    body {
        background-image: url('/images/bgimage.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        min-height: 100vh;
        font-family: 'Segoe UI', sans-serif;
        color: #333;
    }

    .details-box {
        background-color: #ffffff;
        padding: 2rem;
        margin-top: 3rem;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
        border-left: 5px solid #d32f2f;
    }

    h2 {
        color: #d32f2f;
        text-align: center;
        margin-bottom: 1.5rem;
        font-weight: bold;
    }

    .label {
        font-weight: 600;
        color: #1976d2;
    }

    .value {
        color: #000;
        margin-bottom: 1rem;
    }

    .btn-back {
        background-color: #fbc02d;
        color: #000;
        border: none;
        padding: 10px 18px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: 600;
    }

        .btn-back:hover {
            background-color: #f9a825;
            color: #fff;
        }

    .highlight {
        color: #2e7d32;
        font-weight: bold;
    }

    .match-header {
        font-size: 1.3rem;
        background-color: #2e7d32;
        color: white;
        padding: 0.75rem 1rem;
        border-radius: 6px;
        margin-bottom: 1rem;
        text-align: center;
    }
</style>

<div class="container">
    <div class="details-box">
        <h2>Contest Details</h2>

        <div class="match-header">
            @if (!string.IsNullOrWhiteSpace(Model.TeamA) && !string.IsNullOrWhiteSpace(Model.TeamB))
            {
                @($"{Model.TeamA} vs {Model.TeamB}")
            }
            else
            {
                <span class="text-warning">Match: N/A</span>
            }
        </div>

        <div class="mb-3">
            <div class="label">Start Time:</div>
            <div class="value highlight">
                @(Model.StartDate.HasValue
                                ? Model.StartDate.Value.ToLocalTime().ToString("dd MMM yyyy hh:mm tt")
                                : "N/A")
            </div>
        </div>

        <div class="mb-3">
            <div class="label">Entry Fee:</div>
            <div class="value">₹@Model.EntryFee</div>
        </div>

        <div class="mb-3">
            <div class="label">Max Participants:</div>
            <div class="value">@Model.MaxParticipants</div>
        </div>

        <div class="mb-3">
            <div class="label">Total Prize:</div>
            <div class="value text-success fw-bold">₹@Model.TotalPrize</div>
        </div>

        <div class="mb-3">
            <div class="label">Created At:</div>
            <div class="value">@Model.CreatedAt.ToLocalTime().ToString("dd MMM yyyy hh:mm tt")</div>
        </div>

        <div class="text-end">
            <a asp-action="Index" asp-controller="Contest" class="btn-back">← Back to List</a>
        </div>
    </div>
</div>
