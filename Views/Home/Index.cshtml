@model List<CRICXI.Models.Match>
@{
    ViewBag.Title = "CRICXI - Fantasy Cricket Platform";
}

<h2 class="mt-3">Upcoming Matches</h2>

@if (Model.Count == 0)
{
    <p>No matches available right now.</p>
}
else
{
    <div class="row">
        @foreach (var match in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card mb-3 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@match.TeamA vs @match.TeamB</h5>
                        <p class="card-text"><strong>@match.MatchDesc</strong></p>
                        <p class="card-text"><small>@match.StartDate</small></p>
                        <a class="btn btn-sm btn-primary" asp-controller="Contest" asp-action="Create" asp-route-matchId="@match.Id">Join Contest</a>
                        <a class="btn btn-sm btn-success" asp-controller="Match" asp-action="LiveScore" asp-route-id="@match.CricbuzzMatchId">Live Score</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
