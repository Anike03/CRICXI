@model List<CRICXI.Models.LeaderboardEntry>
@{
    ViewBag.Title = "Leaderboard";
    var contest = ViewBag.Contest as CRICXI.Models.Contest;
    var match = ViewBag.Match as CRICXI.Models.Match;
}

<h2>Leaderboard for: @match.TeamA vs @match.TeamB</h2>
<h4>Contest: @contest.Name</h4>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Rank</th>
            <th>Username</th>
            <th>Total Points</th>
            <th>Prize (₹)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model)
        {
            <tr>
                <td>@entry.Rank</td>
                <td>@entry.Username</td>
                <td>@entry.TotalPoints</td>
                <td>@entry.PrizeAmount</td>
            </tr>
        }
    </tbody>
</table>
