@model List<CRICXI.Models.Player>
@{
    ViewBag.Title = "Create Fantasy Team";
    var matchId = ViewBag.MatchId;
}

<h2>Create Fantasy Team</h2>

<form method="post">
    <input type="hidden" name="matchId" value="@matchId" />

    <div class="mb-3">
        <label>Team Name</label>
        <input type="text" name="teamName" class="form-control" required />
    </div>

    <h4>Select 11 Players</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Player</th>
                <th>Team</th>
                <th>Role</th>
                <th>Select</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@p.Team</td>
                    <td>@p.Role</td>
                    <td>
                        <input type="checkbox" name="selectedPlayers" value="@p.Id" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h4>Captain & Vice-Captain</h4>
    <div class="mb-3">
        <label>Captain Player ID:</label>
        <input type="text" name="captainId" class="form-control" required />
        <label>Vice-Captain Player ID:</label>
        <input type="text" name="viceCaptainId" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Submit Team</button>
</form>
