@model List<CRICXI.Models.Match>
@{
    ViewBag.Title = "Upcoming Matches";
}

<h2>Upcoming Matches</h2>

@if (Model.Count == 0)
{
    <p>No upcoming matches available right now.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Match Description</th>
                <th>Teams</th>
                <th>Start Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var match in Model)
            {
                <tr>
                    <td>@match.MatchDesc</td>
                    <td>@match.TeamA vs @match.TeamB</td>
                    <td>@match.StartDate</td>
                </tr>
            }
        </tbody>
    </table>
}
