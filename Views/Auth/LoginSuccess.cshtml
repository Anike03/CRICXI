@{
    ViewBag.Title = "Login Successful";
    Layout = "_Layout";
}

<div class="container mt-5 d-flex justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="card shadow-lg p-4" style="max-width: 500px; width: 100%;">
        <div class="card-body text-center">
            <h3 class="text-success mb-3"><i class="fas fa-check-circle me-2"></i>Login Successful!</h3>
            <p>Welcome <strong>@Context.Session.GetString("Username")</strong>. You're now logged in as <strong>@Context.Session.GetString("Role")</strong>.</p>
            <a class="btn btn-primary mt-3" href="@Url.Action("Index", "Home")">Go to Dashboard</a>
        </div>
    </div>
</div>
