@model CRICXI.Models.Contest
@{
    ViewBag.Title = "Create Contest";
    var match = ViewBag.Match as CRICXI.Models.Match;
}

<style>
    body {
        background-image: url('/images/stadium-light.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        min-height: 100vh;
        font-family: 'Segoe UI', sans-serif;
    }

    .card {
        background-color: rgba(255,255,255,0.95);
        border-radius: 12px;
        padding: 2rem;
        max-width: 650px;
        margin: 3rem auto;
        box-shadow: 0 0 25px rgba(0,0,0,0.3);
    }

        .card h2 {
            color: #d32f2f;
            text-align: center;
            margin-bottom: 1.5rem;
        }

    .form-label {
        font-weight: 600;
    }

    .btn-submit {
        background-color: #388e3c;
        border: none;
        color: #fff;
        font-weight: bold;
    }

        .btn-submit:hover {
            background-color: #2e7d32;
        }
</style>

<div class="card">
    <h2>Create Contest</h2>

    <form method="post">
        @* Hidden field for MatchId *@
        <input type="hidden" asp-for="MatchId" />

        @* Show team names and start time inside the form *@
        <div class="mb-3">
            <label class="form-label">Match</label>
            <input class="form-control" value="@match.TeamA vs @match.TeamB" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Start Time</label>
            <input class="form-control" value="@match.StartDate.ToLocalTime().ToString("dd MMM yyyy hh:mm tt")" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Contest Name</label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="EntryFee" class="form-label">Entry Fee (₹)</label>
            <input asp-for="EntryFee" type="number" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="MaxParticipants" class="form-label">Max Participants</label>
            <input asp-for="MaxParticipants" type="number" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="TotalPrize" class="form-label">Total Prize (₹)</label>
            <input asp-for="TotalPrize" type="number" class="form-control" />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-submit">Create Contest</button>
        </div>
    </form>
</div>
