@model List<CRICXI.Models.Contest>
@{
    ViewData["Title"] = "All Contests";
    Layout = "_Layout";
}

<style>
    :root {
        --cricket-green: #1a5d1a;
        --stadium-light: #f8f9fa;
        --pitch-green: #2a8a2a;
        --team-blue: #0d6efd;
        --team-red: #dc3545;
        --gold-prize: #ffd700;
    }

    .contest-container {
        background: url('/images/cricket-pattern.png') center/cover no-repeat;
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
    }

        .contest-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(255, 255, 255, 0.92);
            z-index: 0;
        }

    .contest-header {
        position: relative;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 3px dashed var(--pitch-green);
    }

    .contest-title {
        color: var(--cricket-green);
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 2px;
        position: relative;
        display: inline-block;
        margin: 0 auto;
    }

        .contest-title::after {
            content: '';
            position: absolute;
            width: 50px;
            height: 3px;
            background: var(--team-red);
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
        }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .back-btn {
        background: #6c757d;
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        font-weight: 500;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
    }

        .back-btn:hover {
            background: #5a6268;
            color: white;
            text-decoration: none;
            transform: translateX(-3px);
        }

    .create-btn {
        background: var(--pitch-green);
        color: white;
        border: none;
        padding: 0.5rem 1.5rem;
        border-radius: 4px;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
    }

        .create-btn:hover {
            background: var(--cricket-green);
            color: white;
            text-decoration: none;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

    .contest-table {
        position: relative;
        background: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

        .contest-table thead {
            background: linear-gradient(135deg, var(--cricket-green), var(--pitch-green));
            color: white;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .contest-table th {
            padding: 1rem;
            font-weight: 600;
            text-align: center;
            vertical-align: middle;
        }

        .contest-table td {
            padding: 1rem;
            vertical-align: middle;
            border-bottom: 1px solid #e9ecef;
        }

        .contest-table tbody tr {
            transition: all 0.3s ease;
        }

            .contest-table tbody tr:hover {
                background-color: rgba(26, 93, 26, 0.05);
                transform: translateY(-2px);
                box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
            }

    .team-vs {
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .team-a {
        color: var(--team-blue);
    }

    .team-b {
        color: var(--team-red);
    }

    .vs {
        background: var(--cricket-green);
        color: white;
        padding: 2px 8px;
        border-radius: 20px;
        font-size: 0.8rem;
    }

    .prize-money {
        font-weight: 700;
        color: blue;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    }

    .entry-fee {
        font-weight: 600;
        color: var(--cricket-green);
    }

    .action-buttons {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        justify-content: center;
    }

    .btn-details {
        background: var(--team-blue);
        border: none;
        min-width: 80px;
    }

    .btn-edit {
        background: #ffc107;
        border: none;
        color: #212529;
        min-width: 80px;
    }

    .btn-delete {
        background: var(--team-red);
        border: none;
        min-width: 80px;
    }

    .status-badge {
        padding: 4px 10px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
    }

    .badge-live {
        background: #dc3545;
        color: white;
        animation: pulse 1.5s infinite;
    }

    .badge-upcoming {
        background: #17a2b8;
        color: white;
    }

    .badge-completed {
        background: #6c757d;
        color: white;
    }

    @@keyframes pulse {
        0% {
            opacity: 1;
        }

        50% {
            opacity: 0.5;
        }

        100% {
            opacity: 1;
        }
    }

    .no-contests {
        text-align: center;
        padding: 3rem;
        background: white;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .no-contests-icon {
        font-size: 3rem;
        color: #6c757d;
        margin-bottom: 1rem;
    }

    @@media (max-width: 768px) {
        .contest-table {
            display: block;
            overflow-x: auto;
        }

        .action-buttons {
            flex-direction: column;
            gap: 5px;
        }

        .team-vs {
            flex-direction: column;
            gap: 5px;
        }

        .header-content {
            flex-direction: column;
            align-items: flex-start;
        }

        .contest-title {
            margin: 0;
        }
    }
</style>

<div class="contest-container">
    <div class="contest-header">
        <div class="header-content">
            <a asp-area="" asp-controller="Admin" asp-action="Dashboard" class="back-btn">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
            <h2 class="contest-title">All Contests</h2>
            <a asp-controller="Admin" asp-action="AllMatches" class="create-btn">
                <i class="fas fa-plus"></i> Create Contest
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="no-contests">
            <div class="no-contests-icon">
                <i class="fas fa-trophy"></i>
            </div>
            <h4>No Contests Available</h4>
            <p class="text-muted">There are currently no contests. Check back later or create a new contest.</p>
            <a asp-controller="Admin" asp-action="AllMatches" class="btn btn-primary mt-3">
                <i class="fas fa-plus"></i> Create New Contest
            </a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="contest-table table">
                <thead>
                    <tr>
                        <th>Match</th>
                        <th>Start Time</th>
                        <th>Status</th>
                        <th>Name</th>
                        <th>Entry Fee</th>
                        <th>Max Participants</th>
                        <th>Total Prize</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var contest in Model)
                    {
                       <tr>
    <td>
        <div class="team-vs">
            <span class="team-a">@contest.TeamA</span>
            <span class="vs">VS</span>
            <span class="team-b">@contest.TeamB</span>
        </div>
    </td>
    <td class="text-center">
        @(contest.StartDate.HasValue
            ? contest.StartDate.Value.ToLocalTime().ToString("dd MMM yyyy hh:mm tt")
            : "N/A")
    </td>
    <td class="text-center">
        @{
            var statusClass = "";
            if (contest.StartDate.HasValue)
            {
                if (contest.StartDate > DateTime.Now)
                {
                    statusClass = "badge-upcoming";
                }
                else if (contest.StartDate.Value.AddHours(8) > DateTime.Now)
                {
                    statusClass = "badge-live";
                }
                else
                {
                    statusClass = "badge-completed";
                }
            }
            else
            {
                statusClass = "badge-completed";
            }
        }
        <span class="status-badge @statusClass">
            @if (statusClass == "badge-upcoming")
            {
                <text>Upcoming</text>
            }
            else if (statusClass == "badge-live")
            {
                <text>Live</text>
            }
            else
            {
                <text>Completed</text>
            }
        </span>
    </td>
    <td>
        <div>
            <div class="fw-bold">@contest.Name</div>
            <div class="text-muted small">
             <strong>🆔 Cricbuzz Match ID:</strong>
                <span class="text-monospace text-primary">@contest.CricbuzzMatchId</span>
            </div>
        </div>
    </td>
    <td class="entry-fee text-center">$@contest.EntryFee</td>
    <td class="text-center">@contest.MaxParticipants</td>
    <td class="prize-money text-center">$@contest.TotalPrize</td>
    <td>
        <div class="action-buttons">
            <a asp-action="Details" asp-route-id="@contest.Id" class="btn btn-details btn-sm">
                <i class="fas fa-info-circle"></i> Details
            </a>
            <a asp-action="EditContest" asp-route-id="@contest.Id" class="btn btn-edit btn-sm">
                <i class="fas fa-edit"></i> Edit
            </a>
            <form asp-action="DeleteContest" asp-route-id="@contest.Id" method="post"
                  onsubmit="return confirm('Are you sure you want to delete this contest?');">
                <button type="submit" class="btn btn-delete btn-sm">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
            </form>
        </div>
    </td>
</tr>

                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.badge-live').each(function() {
                $(this).closest('tr').css('background-color', 'rgba(220, 53, 69, 0.05)');
            });
        });
    </script>
}