@model CRICXI.Models.Contest
@{
    ViewBag.Title = "Create Contest";
    var match = ViewBag.Match as CRICXI.Models.Match;
}

<h2>Create New Contest</h2>

@if (match != null)
{
    <div class="alert alert-info">
        Creating for: <strong>@match.TeamA vs @match.TeamB</strong><br />
        Match: @match.MatchDesc<br />
        Start Time: @match.StartDate
    </div>
}

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="MatchId" />

    <div class="form-group">
        <label asp-for="Name" class="form-label">Contest Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EntryFee" class="form-label">Entry Fee (₹)</label>
        <input asp-for="EntryFee" type="number" class="form-control" />
        <span asp-validation-for="EntryFee" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MaxParticipants" class="form-label">Max Participants</label>
        <input asp-for="MaxParticipants" type="number" class="form-control" />
        <span asp-validation-for="MaxParticipants" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TotalPrize" class="form-label">Total Prize (₹)</label>
        <input asp-for="TotalPrize" type="number" class="form-control" />
        <span asp-validation-for="TotalPrize" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-2">Create</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
</form>
