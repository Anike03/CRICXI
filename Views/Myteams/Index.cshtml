@model List<CRICXI.Models.FantasyTeam>
@{
    ViewBag.Title = "My Fantasy Teams";
}

<h2>My Teams</h2>

@if (Model.Count == 0)
{
    <p>You haven't created any teams yet.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Match ID</th>
                <th>Contest ID</th>
                <th>Captain</th>
                <th>Vice-Captain</th>
                <th>Players</th>
                <th>Created</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var team in Model)
            {
                <tr>
                    <td>@team.MatchId</td>
                    <td>@team.ContestId</td>
                    <td>@team.CaptainId</td>
                    <td>@team.ViceCaptainId</td>
                    <td>
                        @foreach (var pid in team.PlayerIds)
                        {
                            <span class="badge bg-secondary">@pid</span>
                        }
                    </td>
                    <td>@team.CreatedAt.ToLocalTime()</td>
                </tr>
            }
        </tbody>
    </table>
}
